<%- include("partials/header") %>

<div class="ui grid" style="padding-top: 100px;">
  <div class="ui bottom main text container segment">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached ">
      <div class="item">
        <img
          src="<%=blog.image%>"
          style="width: 100%;"
          class="ui centered rounded image"
        />
        <div class="content">
          <span><%=blog.created.toDateString()%></span>
        </div>
        <div class="description">
          <p><%=blog.body%></p>
        </div>
        <form
          action="/blogs/<%= blog._id%>?_method=DELETE"
          method="POST"
          style="display: inline;"
        >
          <button class="ui red basic button">Delete</button>
        </form>
        <a class="ui orange basic button" href="/blogs/<%= blog._id%>/edit"
          >Edit</a
        >
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
