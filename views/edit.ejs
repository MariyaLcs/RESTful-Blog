<%- include("partials/header") %>
<div class="ui grid " style="padding-top: 100px;">
  <div class="ui bottom main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form
      class="ui form"
      action="/blogs/<%=blog._id%>?_method=PUT"
      method="POST"
    >
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title%>" />
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%=blog.image%>" />
      </div>
      <div class="field">
        <label>Blog input</label>
        <textarea
          name="blog[body]"
          placeholder="blog post goes here"
          cols="30"
          rows="10"
        >
<%=blog.body%>
        </textarea>
      </div>
      <input class="ui violet basic button big" type="submit" />
    </form>
  </div>
</div>
<%- include("partials/footer") %>
